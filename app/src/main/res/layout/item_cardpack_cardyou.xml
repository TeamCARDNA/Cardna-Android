<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_8dp_stroke_real_black_2dp"
        android:backgroundTint="@color/main_purple"
        tools:backgroundTint="@color/main_purple">

        <ImageView
            android:id="@+id/iv_cardpack_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_main_black"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="142:203"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/dummy_img_cardpack_1" />

        <TextView
            android:id="@+id/tv_cardpack_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:theme="@style/cardpack_recyclerview_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_cardpack_recyclerview"
            app:layout_constraintTop_toBottomOf="@id/iv_cardpack_recyclerview"
            tools:text="댕댕이 짱 좋아" />

        <CheckedTextView
            android:id="@+id/ctv_cardpack_cardyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:checkMark="@drawable/ic_selector_detailcard_like"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_cardpack_cardyou_lottie"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_cardpack_recyclerview"
            app:layout_constraintStart_toStartOf="@+id/iv_cardpack_recyclerview"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>