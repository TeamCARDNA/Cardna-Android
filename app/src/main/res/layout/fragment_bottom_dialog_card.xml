<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/real_black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottomdialog_card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_gray_radius_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_cardpack_bottom_cardme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_bottomsheet_cardme" />

            <TextView
                android:id="@+id/tv_bottomsheet_cardme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:text="@string/bottom_card_cardme"
                android:textAppearance="@style/cardpack_bottomsheet_title"
                app:layout_constraintStart_toEndOf="@+id/iv_cardpack_bottom_cardme"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bottonsheet_cardme_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="24dp"
                android:text="@string/bottom_card_cardme_detail"
                android:textAppearance="@style/cardpack_bottomsheet_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_bottomsheet_cardme_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_bottomsheet_cardme_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottomdialog_card_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_bottomdialog_card_top">


            <ImageView
                android:id="@+id/iv_cardpack_bottom_cardyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="28dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_bottomsheet_cardyou" />

            <TextView
                android:id="@+id/tv_bottomsheet_cardyou_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/bottom_card_cardyou"
                android:textAppearance="@style/cardpack_bottomsheet_title"
                app:layout_constraintStart_toEndOf="@+id/iv_cardpack_bottom_cardyou"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bottonsheet_cardyou_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="48dp"
                android:text="@string/bottom_card_cardyou_detail"
                android:textAppearance="@style/cardpack_bottomsheet_detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_bottomsheet_cardyou_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_bottomsheet_cardyou_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>